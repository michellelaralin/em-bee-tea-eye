%nav.navbar.navbar-default{role:"navigation"}
	.navbar-header
		= link_to "Best MBTI Test in The World", root_path, class: "navbar-brand"	
	%ul.nav.navbar-nav
		- if signed_in?
			%p.navbar-text Signed in as #{current_user.email}
			%li= link_to "Sign Out", destroy_user_session_path, method: "delete"
		- else
			= link_to "Sign Up", new_user_registration_path, class: "btn btn-default navbar-btn"
			= link_to "Sign In", new_user_session_path, class: "btn btn-default navbar-btn"